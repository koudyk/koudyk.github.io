---

import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";
import { getSkillList } from "../../utils/content-utils";
import { getSkillUrl } from "../../utils/url-utils";
import ButtonSkill from "../control/ButtonSkill.astro";
import WidgetLayout from "./WidgetLayout.astro";

const skills = await getSkillList();

const COLLAPSED_HEIGHT = "7.5rem";

const isCollapsed = skills.length >= 20;

interface Props {
	class?: string;
	style?: string;
}
const className = Astro.props.class;
const style = Astro.props.style;
---
<WidgetLayout name={i18n(I18nKey.skills)} id="skills" isCollapsed={isCollapsed} collapsedHeight={COLLAPSED_HEIGHT} class={className} style={style}>
    <div class="flex gap-2 flex-wrap">
        {skills.map(t => (
            <ButtonSkill href={getSkillUrl(t.name)} label={`View all posts with the ${t.name.trim()} skill`}>
                {t.name.trim()}
            </ButtonSkill>
        ))}
    </div>
</WidgetLayout>